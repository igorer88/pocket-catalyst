{
  "name": "pocket-catalyst",
  "version": "1.0.0",
  "description": "Pocket Catalyst is a simple and intuitive finance management app. It guides you to track spending, manage subscriptions, and achieve your financial goals without the hassle, acting as the perfect catalyst for your financial health.",
  "author": "Igor Escalona <igorer88@gmail.com>",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=10.x"
  },
  "keywords": [
    "typescript",
    "nestjs",
    "template"
  ],
  "scripts": {
    "base:init": "node ./config/scripts/index.mjs",
    "dev": "concurrently \"pnpm:dev:server\" \"pnpm:dev:client\"",
    "dev:client": "pnpm --filter pocket-catalyst-web dev",
    "dev:server": "nest start --watch",
    "build:client": "pnpm --filter pocket-catalyst-web build",
    "build:server": "nest build",
    "build": "pnpm build:client && pnpm build:server",
    "start": "nest start",
    "start:dev": "pnpm dev:server",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint --fix --format=stylish \"**/*.{ts,tsx,mjs,js}\"",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "rimraf coverage && jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "orm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d src/orm.config.ts",
    "migration:generate": "pnpm orm migration:generate",
    "migration:run": "pnpm orm migration:run",
    "migration:revert": "pnpm orm migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "helmet": "^8.1.0",
    "http-method-enum": "^1.0.0",
    "joi": "^18.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.19",
    "@types/express": "^5.0.3",
    "@types/hapi__joi": "^17.1.15",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-dom": "^1.53.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-react-x": "^1.53.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "yaml": "^2.8.1"
  }
}
